<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamers.shiweitian.Home_page.MainActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:weightSum="1"
        android:background="@drawable/personal_background">



        <com.dreamers.shiweitian.CircleImageView
            android:id="@+id/circleimageview"
            android:layout_width="70dp"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/user_photo1" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="请登录"/>

    </LinearLayout>

    
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/background_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="我的举报"/>

    <TextView
        android:id="@+id/all_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:textColor="#aab9b8b8"
        android:textSize="12sp"
        android:text="查看全部举报"/>

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:src="@drawable/arrow"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_marginTop="35dp"
        android:layout_height="1dp"
        android:layout_below="@+id/background_layout"
        android:background="#aae6e3e3" />

    <ImageView
        android:id="@+id/submited"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/submited"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submited"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:text="已提交"/>

    <ImageView
        android:id="@+id/handled"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/line1"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/handled"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submited"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="已受理"/>

    <ImageView
        android:id="@+id/completed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/line1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/completed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completed"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:text="已完成"/>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_marginTop="35dp"
        android:layout_height="10dp"
        android:layout_below="@+id/completed"
        android:background="#aae6e3e3" />

    <ListView
        android:id="@+id/personal_information_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2">

    </ListView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamers.shiweitian.Home_page.MainActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:id="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dreamers.shiweitian.Home_page.MyImageView_1
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/buhegeshipin"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:text="大渔铁板烧（1912）店"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#aab9b8b8"
            android:text="南通东路128号1912街区6号楼3单元"/>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout1"
        android:layout_height="10dp"
        android:background="#aae6e3e3" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:background="@drawable/background1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColorHint="#aab9b8b8"
        android:textCursorDrawable="@null"
        android:hint="填写您举报的原因"/>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/editText1"
        android:layout_height="1dp"
        android:background="#aae6e3e3" />
    
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_background20">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/pen"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            android:textSize="13sp"
            android:textColorHint="#aab9b8b8"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:hint="请补充说明您要举报的情况"/>

    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout2"
        android:layout_height="1dp"
        android:background="#aae6e3e3" />

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/line3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dotted_line">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/camera"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout3"
        android:layout_below="@+id/line3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#aab9b8b8"
        android:textSize="15sp"
        android:text="上传图片"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/line3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="#aab3b3b3"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="#ffffff"/>


</RelativeLayout>

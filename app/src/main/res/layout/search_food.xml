<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamers.shiweitian.Search_page.FoodFragment">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="食 品 种 类"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aae6e3e3"
            android:layout_marginTop="40dp"/>
        <RelativeLayout
            android:id="@+id/chocolate"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chocolate"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:text="巧克力"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aae6e3e3"
            android:layout_marginTop="145dp"/>

        <RelativeLayout
            android:id="@+id/chip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chip"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="薯片"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aae6e3e3"
            android:layout_marginTop="250dp"/>

        <RelativeLayout
            android:id="@+id/cookie"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cookie"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="曲奇"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aae6e3e3"
            android:layout_marginTop="355dp"/>

        <RelativeLayout
            android:id="@+id/candy"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="355dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/candy"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="糖果"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aae6e3e3"
            android:layout_marginTop="460dp"/>

        <RelativeLayout
            android:id="@+id/drink"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="455dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/drink"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="饮料"/>
        </RelativeLayout>
    </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="630dp"
            android:background="#aae6e3e3"
            android:layout_marginLeft="119dp"
            android:layout_gravity="center_horizontal"/>
        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/list"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

    </ListView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selecter">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="150dp"
                    android:layout_height="132dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/recommend_1"/>
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:text="自带长寿基因的食物，不管爱不爱都吃一点"
                    android:layout_below="@+id/img1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/source1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="pclady"
                    android:layout_below="@+id/title1"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年01月04日"
                    android:layout_below="@+id/title1"
                    android:layout_marginLeft="70dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/source1"/>

            </RelativeLayout>
            <View
                android:id="@+id/l1"
                android:layout_width="1dp"
                android:layout_height="215dp"
                android:layout_toRightOf="@+id/layout1"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="南雄开展食品药品安全知识进校园宣传活动"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="韶关日报"
                    android:layout_below="@+id/title2"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年02月21日"
                    android:layout_below="@+id/title2"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/source2"
                    android:background="#aae6e3e3"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:layout_toRightOf="@+id/l1"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="无锡市《食品小作坊登记证管理办法》正式实施"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source3"
                    android:layout_width="60dp"
                    android:layout_height="18dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="无锡市食品药品监督管理局"
                    android:layout_below="@+id/title3"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年01月19日"
                    android:layout_below="@+id/title3"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/source3"
                    android:background="#aae6e3e3"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l1"
                android:layout_below="@+id/layout3"
                android:background="@drawable/layout_selecter">
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="习近平对食品安全工作作出重要指示强调"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/source4"
                    android:layout_width="60dp"
                    android:layout_height="18dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="无锡市食品药品监督管理局"
                    android:layout_below="@+id/title4"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/date4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="2017年01月04日"
                    android:layout_below="@+id/title4"
                    android:layout_marginLeft="80dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/source4"/>
            </RelativeLayout>

            <View
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/layout1"
                android:background="#aae6e3e3"/>

            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/healthcolumn_8"/>
                <TextView
                    android:id="@+id/title5"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img2"
                    android:layout_marginLeft="15dp"
                    android:text="年轻人普遍晚睡有哪些心理层面的原因"/>
                <TextView
                    android:id="@+id/source5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title5"
                    android:layout_marginLeft="60dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="知乎日报"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img2"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source5"/>
            </RelativeLayout>
            <View
                android:id="@+id/l4"
                android:layout_width="1dp"
                android:layout_height="185dp"
                android:layout_toRightOf="@+id/layout5"
                android:layout_below="@+id/l3"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l4"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/foodknowledge_4"/>
                <TextView
                    android:id="@+id/title6"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img3"
                    android:layout_marginLeft="10dp"
                    android:text="全国最美味的20种早餐小吃"/>
                <TextView
                    android:id="@+id/source6"
                    android:layout_width="60dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/title6"
                    android:layout_marginLeft="58dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="中国食品科技网"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img3"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source6"/>
            </RelativeLayout>
            <View
                android:id="@+id/l5"
                android:layout_width="1dp"
                android:layout_height="185dp"
                android:layout_toRightOf="@+id/layout6"
                android:layout_below="@id/l3"
                android:background="#aae6e3e3"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/l5"
                android:layout_below="@+id/l3"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/healthcolumn_3"/>
                <TextView
                    android:id="@+id/title7"
                    android:layout_width="98dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/img4"
                    android:layout_marginLeft="10dp"
                    android:text="跟着专家四步走 做一个智慧的看病人"/>
                <TextView
                    android:id="@+id/source7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title7"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="新浪网"/>
            </RelativeLayout>

            <View
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aae6e3e3"
                android:layout_below="@+id/layout5" />

            <RelativeLayout
                android:id="@+id/layout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:background="@drawable/layout_selecter">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="155dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/foodknowledge_3"/>
                <TextView
                    android:id="@+id/title8"
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/img5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:text="熬夜后吃4种水果补救身体"/>
                <TextView
                    android:id="@+id/source8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title8"
                    android:layout_marginLeft="110dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="美食天下"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/img5"/>
                <View
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:layout_below="@+id/source8"/>
            </RelativeLayout>
            <View
                android:id="@+id/l7"
                android:layout_width="1dp"
                android:layout_height="260dp"
                android:background="#aae6e3e3"
                android:layout_toRightOf="@+id/layout8"
                android:layout_below="@+id/l6"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/layout9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:layout_toRightOf="@+id/l7"
                android:background="@drawable/layout_selecter">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="155dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/foodknowledge_7"/>
                <TextView
                    android:id="@+id/title9"
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="腐乳并非有害食物 8大好处为它“正名”"/>
                <TextView
                    android:id="@+id/source9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title9"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#aac8c8c8"
                    android:textSize="13sp"
                    android:text="美食天下"/>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamers.shiweitian.Home_page.MainActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/report_merchant"
            android:layout_width="145dp"
            android:layout_height="179dp"
            android:src="@drawable/jubao_shangjia2"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight ="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="180dp"
            android:background="#aae6e3e3"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/report_product"
            android:layout_width="142dp"
            android:layout_height="168dp"
            android:src="@drawable/jubao_chanpin2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aae6e3e3"
        android:layout_marginTop="180dp"/>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:weightSum="1">
        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="84dp"
            android:layout_height="69dp"
            android:src="@drawable/qr_code"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.65" />

        <View
            android:layout_width="1dp"
            android:layout_height="69dp"
            android:background="#aae6e3e3"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/phone"
            android:layout_width="120dp"
            android:layout_height="69dp"
            android:src="@drawable/phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#aae6e3e3"
        android:layout_below="@+id/layout2" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="最新举报信息"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/t1"
        android:layout_marginTop="8dp"
        android:background="#aae6e3e3"/>

    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2">

    </ListView>

</RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#ebebeb"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_1"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_2"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_3"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_4"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_5"
            android:gravity="center" />



    </LinearLayout>
</RelativeLayout>

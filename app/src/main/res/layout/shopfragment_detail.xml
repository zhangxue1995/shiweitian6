<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamers.shiweitian.Home_page.MainActivity"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dreamers.shiweitian.Home_page.MyImageView_1
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/buhegeshipin"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:text="大渔铁板烧（1912）店"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#aab9b8b8"
            android:text="信用等级："/>

        <ImageView
            android:id="@+id/star1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/level"
            android:layout_below="@+id/name"
            android:layout_marginTop="19dp"
            android:src="@drawable/star_full"/>
        <ImageView
            android:id="@+id/star2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/star1"
            android:layout_below="@+id/name"
            android:layout_marginTop="19dp"
            android:src="@drawable/star_full"/>
        <ImageView
            android:id="@+id/star3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/star2"
            android:layout_below="@+id/name"
            android:layout_marginTop="19dp"
            android:src="@drawable/star_full"/>
        <ImageView
            android:id="@+id/star4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/star3"
            android:layout_below="@+id/name"
            android:layout_marginTop="19dp"
            android:src="@drawable/star_full"/>
        <ImageView
            android:id="@+id/star5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/star4"
            android:layout_below="@+id/name"
            android:layout_marginTop="19dp"
            android:src="@drawable/star_full"/>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout1"
        android:layout_height="10dp"
        android:background="#aae6e3e3" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#aab9b8b8"
        android:text="餐厅名称："/>
    <TextView
        android:id="@+id/canteen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_toRightOf="@+id/t1"
        android:layout_marginTop="10dp"
        android:textColor="#aab9b8b8"
        android:text="大渔铁板烧（1912）店"/>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t1"
        android:layout_height="1dp"
        android:background="#aae6e3e3" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#aab9b8b8"
        android:text="餐厅地址："/>
    <TextView
        android:id="@+id/canteen_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_toRightOf="@+id/t1"
        android:layout_marginTop="10dp"
        android:textColor="#aab9b8b8"
        android:text="南通东路128号1912街区6号楼3单元"/>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t2"
        android:layout_height="1dp"
        android:background="#aae6e3e3" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="#aab9b8b8"
        android:text="经营范围："/>
    <TextView
        android:id="@+id/canteen_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_toRightOf="@+id/t1"
        android:layout_marginTop="10dp"
        android:textColor="#aab9b8b8"
        android:text="中式餐饮、西式餐饮、凉菜制作、烧烤熟肉"/>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t3"
        android:layout_height="10dp"
        android:background="#aae6e3e3" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_below="@+id/line4"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_background21">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="大渔铁板烧（1912）店"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name1"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="最近6个月被举报情况"/>


        <View
            android:id="@+id/line1_1"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/month1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="5月"/>
        <TextView
            android:id="@+id/month2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/month1"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="6月"/>
        <TextView
            android:id="@+id/month3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/month2"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="7月"/>
        <TextView
            android:id="@+id/month4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/month3"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="8月"/>
        <TextView
            android:id="@+id/month5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/month4"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="9月"/>
        <TextView
            android:id="@+id/month6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/month5"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:text="10月"/>


    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout"
        android:layout_height="10dp"
        android:background="#aae6e3e3" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#aab9b8b8"
        android:text="证件信息"/>

    <View
        android:id="@+id/line6"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/info"
        android:layout_height="1dp"
        android:background="#aae6e3e3" />

    <ImageView
        android:id="@+id/certificate1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/line6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/caomei"/>
            <ImageView
                android:id="@+id/certificate2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@+id/line6"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/caomei"/>

            <View
                android:layout_below="@id/certificate1"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
